    <ScrollView
        android:id="@+id/home_page__scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/home_header"
                android:name="com.example.ahsapptest3.Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/header_layout" />

            <fragment
                android:id="@+id/fragment"
                android:name="com.example.ahsapptest3.Featured_News"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/template__featured_display"/>

            <fragment
                android:id="@+id/asbNews"
                android:name="com.example.ahsapptest3.Asb_News"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/template__news_layout"/>

            <fragment
                android:id="@+id/sportsNews"
                android:name="com.example.ahsapptest3.Sports_News"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/template__news_layout"/>

            <fragment
                android:id="@+id/districtNews"
                android:name="com.example.ahsapptest3.District_News"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/template__news_layout"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/home_page__navigation_bar"
        layout="@layout/navigation_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


