<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:elevation="0dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:contentScrim="?attr/colorPrimary"

            >

            <LinearLayout
                android:id="@+id/bulletin_options_header_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/White_FFFFFF__HOME_BULLETIN_ARTICLE_NOTIF"

                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier=".7">

                <LinearLayout
                    android:id="@+id/bulletin_header_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/EveryPage_Side_Padding"
                    android:paddingEnd="@dimen/EveryPage_Side_Padding"
                    android:paddingTop="@dimen/EveryPage_Side_Padding"
                    android:paddingBottom="@dimen/EveryPage_Side_Padding_Half"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    >

                    <TextView
                        android:id="@+id/bulletin_titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/din_alternate_bold"
                        android:text="Student Bulletin"
                        android:textColor="@color/NEW_DarkCrimson_1A0303__BULLETIN"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/bulletin_notif_Image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:adjustViewBounds="true"
                        android:tint="@color/NEW_DarkCrimson_1A0303__BULLETIN"
                        app:srcCompat="@drawable/icon_notifications"
                        android:padding="@dimen/EveryPage_Side_Padding_Quarter"/>
                </LinearLayout>
                <HorizontalScrollView
                    android:id="@+id/bulletin_bar_ScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bulletin_header_LinearLayout">


                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/EveryPage_Side_Padding_Half"
                        android:paddingRight="@dimen/EveryPage_Side_Padding_Half">


                        <com.example.ahsapptest3.Helper_Code.Bulletin_SelectorView
                            android:id="@+id/bulletin_seniors_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:text="Seniors" />

                        <com.example.ahsapptest3.Helper_Code.Bulletin_SelectorView
                            android:id="@+id/bulletin_events_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:text="Events" />

                        <com.example.ahsapptest3.Helper_Code.Bulletin_SelectorView
                            android:id="@+id/bulletin_colleges_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:text="Colleges" />

                        <com.example.ahsapptest3.Helper_Code.Bulletin_SelectorView
                            android:id="@+id/bulletin_reference_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:text="Reference" />

                        <com.example.ahsapptest3.Helper_Code.Bulletin_SelectorView
                            android:id="@+id/bulletin_athletics_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:text="Athletics" />

                        <com.example.ahsapptest3.Helper_Code.Bulletin_SelectorView
                            android:id="@+id/bulletin_others_selection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:text="Others" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bulletin_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>