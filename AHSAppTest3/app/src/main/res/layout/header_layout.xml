<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header__ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_header_bg"
    android:elevation="5dp"
    android:paddingTop="@dimen/EveryPage_Side_Padding_Quarter"
    android:paddingBottom="@dimen/EveryPage_Side_Padding_Quarter"
    tools:context=".Header">

    <TextView
        android:id="@+id/header__TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/EveryPage_Side_Padding_Quarter"
        android:layout_marginStart="@dimen/EveryPage_Side_Padding_Quarter"
        android:layout_marginLeft="@dimen/EveryPage_Side_Padding_Quarter"
        android:fontFamily="@font/sf_pro_semibold"
        android:text="Arcadia"
        android:textColor="@color/NEW_AngryRed_9F0C0C__ALL"
        android:textSize="18sp"

        app:layout_constraintStart_toEndOf="@id/header__image"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:includeFontPadding="false"-->
    <TextView
        android:id="@+id/header__timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sf_pro_semibold"
        android:text="Month 00"
        android:textColor="@color/NEW_GoldenYellow_DCD33D__HOME_BULLETIN"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/header__TitleText"
        app:layout_constraintTop_toBottomOf="@+id/header__TitleText" />

    <ImageView
        android:id="@+id/header__image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/EveryPage_Side_Padding_Quarter"
        android:layout_marginStart="@dimen/EveryPage_Side_Padding_Half"
        android:layout_marginLeft="@dimen/EveryPage_Side_Padding_Half"
        android:scaleType="centerInside"
        android:src="@mipmap/feather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio=".75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--
    <ImageButton
        android:id="@+id/header__notifications_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/EveryPage_Side_Padding"
        android:layout_marginRight="@dimen/EveryPage_Side_Padding"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_notifications" />-->

    <fragment
        android:id="@+id/header__notifications_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:name="com.example.ahsapptest3.NotifBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/notif_btn"
         />

</androidx.constraintlayout.widget.ConstraintLayout>