<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header__ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Crimson_992938__HOME_BULLETIN"
    android:paddingLeft="@dimen/EveryPage_Side_Padding"
    android:paddingTop="@dimen/EveryPage_Side_Padding_Half"
    android:paddingRight="@dimen/EveryPage_Side_Padding"
    android:paddingBottom="@dimen/EveryPage_Side_Padding_Half"
    tools:context=".Header">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/header__TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display"
        android:text="Arcadia"
        android:textColor="@color/White_FFFFFF__HOME_BULLETIN"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header__timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display"
        android:text="Month 00"
        android:textColor="@color/White_FFFFFF__HOME_BULLETIN"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header__TitleText" />

    <ImageView
        android:id="@+id/header__image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/feather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio=".75"
        app:layout_constraintStart_toEndOf="@id/header__barrier"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/header__notifications_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/icon_notifications"
        app:layout_constraintBottom_toBottomOf="@id/header_75horz_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/header_25horz_guideline" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header__barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="header__timeText,header__TitleText"
        tools:layout_editor_absoluteX="402dp"
        tools:layout_editor_absoluteY="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/header_25horz_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/header_75horz_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75" />

</androidx.constraintlayout.widget.ConstraintLayout>