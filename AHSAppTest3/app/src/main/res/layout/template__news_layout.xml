<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/template_news__ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/template_news__background_gradient"
    android:paddingLeft="0dp"
    android:paddingTop="@dimen/EveryPage_Side_Padding_Half"
    android:paddingRight="0dp"
    android:paddingBottom="@dimen/EveryPage_Side_Padding_Half"
    tools:context=".News_Template">

    <TextView
        android:id="@+id/template_news__TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/EveryPage_Side_Padding"
        android:layout_marginLeft="@dimen/EveryPage_Side_Padding"
        android:fontFamily="@font/sf_pro_compactbold"
        android:text="SOMETHING NEWS"
        android:textColor="@color/Black_000000__HOME"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/template_news__rounded_bar"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginStart="@dimen/EveryPage_Side_Padding_Half"
        android:layout_marginLeft="@dimen/EveryPage_Side_Padding_Half"
        android:layout_marginEnd="@dimen/EveryPage_Side_Padding_Half"
        android:layout_marginRight="@dimen/EveryPage_Side_Padding_Half"
        android:src="@drawable/news_template_rounded_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/template_news__TitleText" />

    <com.example.ahsapptest3.EnhancedWrapContentViewPager
        android:id="@+id/template_news__ViewPager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/EveryPage_Side_Padding_Half"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/template_news__rounded_bar">

    </com.example.ahsapptest3.EnhancedWrapContentViewPager>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/template_news__TabLayout"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guideline6"
        app:layout_constraintStart_toStartOf="@id/guideline5"
        app:layout_constraintTop_toBottomOf="@id/template_news__ViewPager"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed">


    </com.google.android.material.tabs.TabLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".65" />
</androidx.constraintlayout.widget.ConstraintLayout>