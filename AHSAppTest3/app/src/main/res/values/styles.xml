<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--The color of the top bar thingy on your phone-->
        <item name="colorAccent">@color/colorAccent</item>

    </style>



    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/LightGray_EAEAEA</item>

    </style>

    <style name="Spaced_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/LightGray_EAEAEA</item>
        <item name = "android:layout_marginLeft">@dimen/Full_Padding</item>
        <item name = "android:layout_marginRight">@dimen/Full_Padding</item>
        <item name = "android:layout_marginTop">@dimen/Quarter_Padding</item>
        <item name = "android:layout_marginBottom">@dimen/Quarter_Padding</item>
    </style>

    <style name="SeekBarWithoutSteps" parent="Base.Widget.AppCompat.SeekBar.Discrete">
        <item name="tickMark">@null</item>
    </style>

    <style name="credits_names_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/GraniteRed_7E6E6A</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="credits_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sf_pro_semibold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/DarkCrimson_1A0303</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="bulletin_selectorview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dp</item>
    </style>


</resources>
