<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hsappdev.ahs">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ArticleImageActivity" />
        <activity
            android:name=".Bulletin_Article_Activity"
            android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection" />

        <service
            android:name=".NotifService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".settingsActivities.Notif_Settings_Activity" />
        <activity android:name=".settingsActivities.About_Activity" />
        <activity android:name=".settingsActivities.Terms_Activity" />
        <activity android:name=".settingsActivities.Settings_Activity" />
        <activity android:name=".Saved_Activity" />
        <activity android:name=".Notif_Activity" />
        <activity
            android:name=".ArticleActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|layoutDirection" />
        <activity android:name=".Bulletin_Activity" />


        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/downsize_feather" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/AngryRed_9F0C0C" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/notif_channel_ID" />
    </application>

</manifest>